{
  "name": "@ludiz/colyseus-server",
  "version": "1.0.0",
  "type": "module",
  "private": false,
  "description": "Generic Colyseus server for ludiz-vibe game templates",
  "main": "build/index.js",
  "bin": {
    "ludiz-colyseus": "build/cli.js"
  },
  "engines": {
    "node": ">= 20.9.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "pnpm run clean && tsc && chmod +x build/cli.js",
    "clean": "rimraf build",
    "start": "node build/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "check-types": "tsc --noEmit",
    "postinstall": "yarn run build"
  },
  "dependencies": {
    "@colyseus/auth": "^0.16.6",
    "@colyseus/core": "^0.16.17",
    "@colyseus/monitor": "^0.16.7",
    "@colyseus/playground": "^0.16.4",
    "@colyseus/schema": "^3.0.35",
    "@colyseus/tools": "^0.16.8",
    "@colyseus/ws-transport": "^0.16.5",
    "colyseus": "^0.16.4",
    "express": "^4.18.2",
    "json-logic-js": "^2.0.5",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "mustache": "^4.2.0",
    "reflect-metadata": "^0.2.2",
    "xstate": "^5.20.2",
    "rimraf": "^5.0.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@colyseus/loadtest": "^0.16.1",
    "@colyseus/testing": "^0.16.3",
    "@types/express": "^4.17.1",
    "@types/lodash.get": "^4.4.9",
    "@types/lodash.set": "^4.3.9",
    "@types/mustache": "^4.2.5",
    "tsx": "^4.10.2",
    "vitest": "^2.1.8"
  }
}
